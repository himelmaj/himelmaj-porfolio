---
import "@fontsource-variable/inter";
import "../styles/globals.css";

import i18next from "i18next";
import { HeadHrefLangs } from "astro-i18next/components";
import  SpeedInsights  from "@vercel/speed-insights/astro"
import { ViewTransitions } from 'astro:transitions';

import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import BaseHead from "../components/layout/BaseHead.astro";
import ButtonUp from "@/components/ButtonUp.astro";

import Background from "../components/layout/Background.astro";

---

<!doctype html>
<html lang={i18next.language}>
  <head>
    <BaseHead />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <HeadHrefLangs />
    <ViewTransitions />
  </head>

  <body class="relative text-black dark:text-white">
    <SpeedInsights />
    <Background />
    <div class=" w-full mx-auto container lg:max-w-4xl md:max-w-2xl flex flex-col justify-center min-h-screen px-6 pb-10 pt-7 sm:px-10 lg:px-10">
      <Header />
      <main class="flex-1">
        <slot />
      </main>
      <ButtonUp />
      <Footer />
    </div>
    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family: "Inter Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
      }

      body {
        color: rgba(17, 17, 17, 0.9);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }
      @media (prefers-color-scheme: dark) {
        body {
          color: rgba(255, 255, 255, 0.9);
        }
      }
    </style>
  </body>
</html>
