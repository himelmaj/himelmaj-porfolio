---
import { LanguageSelector } from "astro-i18next/components";
import ThemeToggle from "./ThemeToggle.astro";
---

<header
  class="mb-12 flex w-full flex-wrap pb-3 text-sm sm:flex-nowrap sm:justify-start"
>
  <nav
    class="relative mx-auto flex w-full items-center justify-between sm:flex sm:items-center"
    aria-label="global"
  >
    <h1 class="flex-none text-xl font-semibold" aria-label="Brand">himelmaj</h1>

    <div class="flex flex-row items-center justify-center gap-x-5 sm:gap-x-7">
      <ThemeToggle />

      <LanguageSelector
        showFlag={true}
        class="bg-white dark:bg-zinc-900 hover:bg-gray-100 hover:dark:bg-zinc-800 p-2 rounded-md px-3 appearance-none cursor-pointer text-md shadow-md"
      />
    </div>
  </nav>
</header>
